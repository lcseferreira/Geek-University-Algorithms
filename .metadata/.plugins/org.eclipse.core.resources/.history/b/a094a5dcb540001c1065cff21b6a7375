#include <stdio.h>

int main() {
	int valor, maior, menor, media, soma;

	maior, soma, media = 0;
	menor = -1;

	for (int i = 1; i <= 10; i++) {
		printf("Digite um número: ");
		fflush(stdout);
		scanf("%d", valor);

		if (valor > maior) {
			maior = valor;
		}

		if (valor < menor) {
			menor = valor;
		}

		soma += valor;
	}

	media = soma / 10;

	printf("Maior: %d", maior);
	printf("Menor: %d", menor);
	printf("Média: %d", media);
}
