#include <stdio.h>

int main() {
	int extra, horas, excesso, salario;

	printf("Digite o número de horas trabalhadas: ");
	fflush(stdout);
	scanf("%d", &horas);

	if (horas > 50) {
		excesso = horas - 50;
		extra = excesso * 20;
	}

	salario = horas * 10;

	printf("Salário: R$ %.2f", salario);
	printf("Salário extra: R$ %.2f", extra);
}
