#include <stdio.h>
#include <stdbool.h>

int main () {

	int vetor[10];
	bool maior_que_50 = false;

	for (int i = 0; i < 10; i++) {

		printf("Digite um número: ");
		fflush(stdout);
		scanf("%d", &vetor[i]);

		if (vetor[i] > 50) {
			printf("Número %d, posição %d", vetor[i], i);
			maior_que_50 = true;
		}
	}

	if (!maior_que_50) {
		printf("Não há números maiores que 50!");
	}
}
