#include <stdio.h>

int main() {
	// DECLARANDO VARIÁVEIS
	int quantidade_minima, quantidade_maxima;
	float estoque_medio;

	// ENTRADA DE DADOS
	printf("Digite a quantidade mínima do estoque: ");
	fflush(stdout);
	scanf("%d", &quantidade_minima);

	printf("Digite a quantidade máxima do estoque: ");
	fflush(stdout);
	scanf("%d", &quantidade_maxima);

	// PROCESSAMENTO
	estoque_medio = (quantidade_minima + quantidade_maxima) / 2;

	// SAÍDA
	printf("A estoque médio é %2F", estoque_medio);
}
