#include <stdio.h>

int main() {
	float salario, valor_por_hora;
	int horas;

	printf("Digite o valor da sua hora: ");
	fflush(stdout);
	scanf("%f", &valor_por_hora);

	printf("Digite quantas horas você trabalhou: ");
	fflush(stdout);
	scanf("%d", &horas);

	salario = valor_por_hora * horas;

	printf("O seu salário esse mês foi de R$ %.2f", salario);
}
