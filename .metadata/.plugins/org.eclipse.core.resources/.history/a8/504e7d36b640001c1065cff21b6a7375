#include <stdio.h>

int main() {
	int valor, maior, menor, soma;
	float media;

	maior = 0;
	menor = -1;

	for (int i = 1; i <= 10; i++) {
		printf("Digite um número: ");
		fflush(stdout);
		scanf("%d", &valor);

		if (valor > maior) {
			maior = valor;
		}

		if (valor < menor) {
			menor = valor;
		}

		soma += valor;
	}

	media = soma / 10;

	printf("Maior: %d\n", maior);
	printf("Menor: %d\n", menor);
	printf("Média: %f\n", media);
}
